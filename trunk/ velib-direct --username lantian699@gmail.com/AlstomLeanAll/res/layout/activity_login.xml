    <EditText
        android:id="@+id/loginEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frameLayout1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="215dp"
        android:ems="10"
        android:hint="@string/login"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/primary_text_dark"
        android:textColorHint="@android:color/primary_text_dark" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/mdpEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loginEditText"
        android:layout_alignBottom="@+id/loginEditText"
        android:layout_marginLeft="211dp"
        android:layout_toRightOf="@+id/loginEditText"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@android:color/primary_text_dark"
        android:textColorHint="@android:color/primary_text_dark" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mdpEditText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="93dp"
        android:background="@drawable/login_ok_button_background"
        android:text="@android:string/ok"
        android:textColor="@android:color/primary_text_dark" />

