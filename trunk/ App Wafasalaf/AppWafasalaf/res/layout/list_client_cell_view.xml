
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_height="fill_parent" >
        
        <TextView 
            android:id="@+id/tx_loc_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pin"
            android:gravity="center_horizontal|top"
            android:textSize="10dp"
            android:text="1"/>

	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginLeft="30dp"
	            android:layout_height="wrap_content">
	        <TextView
	            android:id="@+id/tx_nom_client"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Nom du client : "
	            android:visibility="gone"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/nom_client"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Medium Text"
	     	 	android:textStyle="bold"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        
	         <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content">
	        <TextView
	            android:id="@+id/tx_date_pro"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Date de visite : "
	            android:visibility="gone"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/date_pro"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Medium Text"
	            android:textColor="#9F9E9E"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
		
	        
	       
		</LinearLayout>
		
	       
	         <ImageView
	            android:id="@+id/btn_phone_call"
	            android:layout_marginRight="60dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:focusable="false"
	            android:layout_gravity="center_vertical|right"
	            android:src="@drawable/btn_phone_call_selector"/>
	        
	        <ImageView 
	            android:id="@+id/btn_location"
	            android:layout_marginRight="10dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:focusable="false"
	            android:layout_gravity="center_vertical|right"
	            android:src="@drawable/btn_map_selector"/>
    </FrameLayout>
