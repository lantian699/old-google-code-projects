<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
              android:id="@+id/layout_root"  
              android:orientation="vertical"  
              android:layout_width="fill_parent"  
              android:layout_height="fill_parent"  
              android:padding="10dp"  
              >  
    <LinearLayout   
        android:orientation="horizontal"  
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"  
        android:padding="5px"   
        >  
    <TextView android:id="@+id/tx_sub_mesure_des"  
              android:layout_width="wrap_content"  
              android:layout_height="fill_parent"  
              android:text="Description : "
              android:textAppearance="?android:attr/textAppearanceMedium"
              />  
              
    <EditText
        android:id="@+id/edit_sub_mesure_des" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
     </LinearLayout>
     
     <LinearLayout   
        android:orientation="horizontal"  
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"  
        android:padding="5px"   
        >  
    <TextView android:id="@+id/tx_sub_mesure_unit"  
              android:layout_width="wrap_content"  
              android:layout_height="fill_parent"  
              android:text="Unit : "
              android:textAppearance="?android:attr/textAppearanceMedium"
              />  
              
    <EditText
        android:id="@+id/edit_sub_mesure_unit" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
     </LinearLayout>
     
     
      <LinearLayout   
        android:orientation="horizontal"  
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"  
        android:padding="5px"   
        >  
    <TextView android:id="@+id/tx_sub_mesure_low"  
              android:layout_width="wrap_content"  
              android:layout_height="fill_parent"  
              android:text="Low : "
              android:textAppearance="?android:attr/textAppearanceMedium"
              />  
              
    <EditText
        android:id="@+id/edit_sub_mesure_low" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
     </LinearLayout>
     
       <LinearLayout   
        android:orientation="horizontal"  
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"  
        android:padding="5px"   
        >  
    <TextView android:id="@+id/tx_sub_mesure_high"  
              android:layout_width="wrap_content"  
              android:layout_height="fill_parent"  
              android:text="High : "
              android:textAppearance="?android:attr/textAppearanceMedium"
              />  
              
    <EditText
        android:id="@+id/edit_sub_mesure_high" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
     </LinearLayout>
     
        <LinearLayout   
        android:orientation="horizontal"  
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"  
        android:padding="5px"   
        >  
    <TextView android:id="@+id/tx_sub_mesure_type"  
              android:layout_width="wrap_content"  
              android:layout_height="fill_parent"  
              android:text="Type : "
              android:textAppearance="?android:attr/textAppearanceMedium"
              />  
              
    <Spinner
        android:id="@+id/spinner_sub_mesure_type" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
     </LinearLayout>
              
    <LinearLayout   
        android:orientation="horizontal"  
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"  
        android:padding="5px"   
        >  
    <Button android:id="@+id/button_yes"  
              android:layout_width="wrap_content"  
              android:layout_height="wrap_content"  
              android:layout_marginLeft="30dp"
              android:text=" Yes "  
              android:gravity="center"  
              />  
    <Button android:id="@+id/button_no"  
              android:layout_width="wrap_content"  
              android:layout_height="wrap_content"  
              android:layout_marginLeft="100dp"
              android:text=" No "  
              android:gravity="center"  
              />   
    </LinearLayout>  
</LinearLayout>  