        </LinearLayout>
        
               <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:padding="10dp"
            android:id="@+id/finding_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
      <Spinner 
          android:id="@+id/finding_spinner_status"
          android:layout_marginLeft="30dp"
            android:minWidth="200dp"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          />   
        
        </LinearLayout>
        
         <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:padding="10dp"
            android:id="@+id/finding_require"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REQUIRES WP"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
      <Spinner 
          android:id="@+id/finding_spinner_require"
          android:layout_marginLeft="30dp"
            android:minWidth="200dp"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          />   
        
        </LinearLayout>

         <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:padding="10dp"
            android:id="@+id/finding_related_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Related Object"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
      <Button 
          android:id="@+id/finding_btn_related_object"
          android:layout_marginLeft="30dp"
            android:minWidth="200dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="select"/>
      
            

    </LinearLayout>
    
         
       <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">     
       <TextView
            android:padding="10dp"
            android:id="@+id/finding_related_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Related Task"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
      <Spinner 
          android:id="@+id/finding_spinner_task"
