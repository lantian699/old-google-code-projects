
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
        android:id="@+id/rtLayout1"
        android:background="@drawable/backgrd"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        
                <com.google.ads.AdView 
		android:id="@+id/ad" 
		 android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		ads:backgroundColor="#000000"
		ads:testing="false"
		ads:adUnitId="a14edd2a1e58f57"
		ads:adSize="BANNER"
		ads:refreshInterval="60"
		ads:textColor="#FFFFFF"
		ads:keywords="Android application"
		/>
         
       
         
         
        
        <TextView
              android:id="@+id/textView01"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_above="@id/ad"
              android:textSize="19sp" />
       
        
          <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativeLayoutTop"
            android:layout_width="fill_parent"  
            android:layout_height="50dip" 
            android:background="#00000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">
            
            <TextView
            android:id="@+id/timuTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_gravity="center"
           	android:gravity="center"
            android:text="TextViewTOP"
            android:textSize="16sp" />
            
          </RelativeLayout>
          
            
             
           <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativeLayoutBottom"
            android:layout_width="fill_parent"   
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:orientation="horizontal">

              <ImageView
                  android:id="@+id/arrowRight"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:onClick="arrowRightOnClick"
                  android:background="#00000000"
                  android:layout_alignParentRight="true"
                 
                  android:layout_alignParentTop="true"
                  android:src="@drawable/arrow_right" />

              <ImageView
                  android:id="@+id/arrowLeft"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:onClick="arrowLeftOnClick"
                  android:background="#00000000"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="true"
                  android:src="@drawable/arrow_left" />
            
          </RelativeLayout>
       
		
        
        

    </RelativeLayout>
