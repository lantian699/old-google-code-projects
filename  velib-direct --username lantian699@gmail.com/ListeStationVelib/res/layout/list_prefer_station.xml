
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/cadre_gris_clair"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <TextView android:id="@+id/prefer_station_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#D94187"
            android:textSize="12dp"
            android:text="Station Name"
            />
        
       		<LinearLayout android:orientation="horizontal"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
            
            <ImageButton 
                android:layout_marginLeft="10dp"
                android:id="@+id/refresh_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/spacer"
         		android:src="@drawable/actualiser_small_default"/>
            
            <TextView
                android:id="@+id/num_free_bike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/bubble"
               	android:layout_gravity="center"
               	android:gravity="center"
                android:text="-1"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            
            <TextView 
                android:id="@+id/num_total_bike"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="/X"
                android:textColor="#D94187"
                android:textSize="25dp"/>
            
            <ImageButton 
                android:id="@+id/delete_station"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_marginLeft="50dp"
                android:background="@drawable/spacer"
                android:gravity="right"
         		android:src="@drawable/cross_bleu"/>
            
            
        </LinearLayout>

    </LinearLayout>
