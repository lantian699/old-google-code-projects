
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/veliblogo"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous n&apos;avez pas choisi les stations préférées" />
        
        <ListView 
            android:id="@+id/list_prefer_station"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:cacheColorHint="#FFFFFF"
            android:minHeight="200dp">
            
        </ListView>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            
            <Button
            android:id="@+id/btn_prox"
            android:layout_width="120dp"
            android:layout_height="100dp"
 
            android:layout_marginLeft="30dp"
            android:text="Stations à proximité" />

        <Button
            android:id="@+id/btn_list"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="14dp"
            android:text="liste des stations" />
        </LinearLayout>
        
    </LinearLayout>
